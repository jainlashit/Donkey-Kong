<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lashit.debt" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ruppee2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="uiMode|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".calender"
            android:configChanges="screenSize|orientation|uiMode"
            android:label="@string/title_activity_calender"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".way"
            android:configChanges="screenSize|orientation|uiMode"
            android:label="@string/title_activity_way"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".core"
            android:label="@string/title_activity_core" >
        </activity>
    </application>

</manifest>
